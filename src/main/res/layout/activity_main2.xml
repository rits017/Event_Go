<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="409dp"
        android:layout_height="520dp"
        android:backgroundTint="#00BCD4"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed211"
        app:layout_constraintVertical_bias="0.5">

        <ListView
            android:id="@+id/lv211"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#E91E63"
            android:backgroundTint="#E91E63" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv211"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:background="#00BCD4"
        android:backgroundTint="#00BCD4"
        android:paddingLeft="85dp"
        android:text="Booking List"
        android:textColor="#E91E63"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv212"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/tv212"
        android:layout_width="380dp"
        android:layout_height="70dp"
        android:background="#00BCD4"
        android:backgroundTint="#00BCD4"
        android:paddingLeft="5dp"
        android:text="Click UID to know more about customer ."
        android:textColor="#E91E63"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/ed211"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv211"
        app:layout_constraintVertical_bias="0.5" />

    <EditText
        android:id="@+id/ed211"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="#00BCD4"
        android:backgroundTint="#00BCD4"
        android:ems="10"
        android:hint="Enter User UID to Search ."
        android:inputType="textPersonName"
        android:textColor="#E91E63"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.144"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv212"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/b233"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:background="@android:drawable/ic_menu_search"
        android:backgroundTint="#E91E63"
        app:layout_constraintBottom_toTopOf="@+id/ed211"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.948"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed211"
        app:layout_constraintVertical_bias="0.5" />


</androidx.constraintlayout.widget.ConstraintLayout>