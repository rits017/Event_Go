<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ece8e2"
    android:backgroundTint="#ece8e2"
    tools:context=".MainActivity23">

    <TextView
        android:id="@+id/tv231"
        android:layout_width="360dp"
        android:layout_height="160dp"
        android:layout_marginBottom="10dp"
        android:background="#FF9800"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:text=":: Did you receive the money from this user ? Remember you can't edit once you click confirm .Click after cross check"
        android:textColor="#ece8e2"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.347" />

    <Button
        android:id="@+id/b231"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/roundbutton"
        android:backgroundTint="#0b8677"
        android:text="CONFIRM"
        android:textColor="#ece8e2"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.643" />

</androidx.constraintlayout.widget.ConstraintLayout>